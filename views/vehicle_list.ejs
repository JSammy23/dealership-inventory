<div class="container">
    <h1 class="my-4"><%= title %></h1>

    <p>All vehicles in our inventory are listed below:</p>

    <div class="list-group">
        <% for (let vehicle of vehicle_list) { %>
            <div class="list-group-item">
                <h4 class="mb-2"><%= vehicle.make.name %> <%= vehicle.model %></h4>
            
                <div class="row">
                    <!-- First Column -->
                    <div class="col-md-6">
                        <p><strong>Year:</strong> <%= vehicle.year %></p>
                        <p><strong>Category:</strong> <%= vehicle.category.name %></p> <!-- Assuming category has a name or similar field when populated -->
                        <p><strong>VIN:</strong> <%= vehicle.vin ? vehicle.vin : 'N/A' %></p>
                        <p><strong>Condition:</strong> <%= vehicle.condition %></p>
                    </div>
            
                    <!-- Second Column -->
                    <div class="col-md-6">
                        <p><strong>Milage:</strong> <%= vehicle.milage %></p>
                        <p><strong>Price:</strong> <%= vehicle.formatted_price %></p>
                        <p><strong>Color:</strong> <%= vehicle.color %></p>
                        <p><a href="<%= vehicle.url %>">Details</a></p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>